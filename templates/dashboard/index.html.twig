{% extends 'base.html.twig' %}



{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1>Welcome, {{ user.username }}!</h1>

    Role List
    <div class="space-y-8">
      {% for role in roles %}
          <div class="bg-white p-4 rounded-md w-40">
            <div class="mb-2 border-b border-gray-800">
                <span class="text-xl text-bold">
                  {{ role.name }}
                </span>
            </div>
            <div>
              {% for player in role.players %}
              <div class="flex space-x-2">
                <span>
                  {{ player.name}}
                </span>
                <form method="post" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
                    <button>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                      </svg>
                    </button>
                </form>
              </div>
              {% endfor %}
            </div>
          </div>
      {% endfor %}
    </div>

     {% include 'player/new.html.twig' %}

    <div id="app">
        <Dashboard></Dashboard>
    </div>
    {{ encore_entry_script_tags('app') }}
{% endblock %}
